<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CcActivity">
    <TextView
        android:id="@+id/title_textual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CENTERTEXT"
        android:elevation="5dp"
        android:textSize="22sp"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toTopOf="@+id/nasashit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/bigfingerbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        />

    <ImageView
        android:id="@+id/nasashit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/hypenasashirtfnt"
        />



</androidx.constraintlayout.widget.ConstraintLayout>